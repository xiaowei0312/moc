.pagination {
    font-size: 80%;
 }
        
.pagination a {
    text-decoration: none;
	border: solid 1px #AAE;
	color: #15B;
}

.pagination a, .pagination span {
    display: block;
    float: left;
    padding: 5 10;
    margin-right: 5px;
	margin-bottom: 5px;
}

.pagination .current2 {
    background: #26B;
    color: #fff;
	border: solid 1px #AAE;
	border-color:#999;
}

.pagination .current2.prev, .pagination .current2.next{
	color:#999;
	border-color:#999;
	background:#fff;
}